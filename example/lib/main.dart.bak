import 'package:flutter/material.dart';
import 'dart:async';

import 'package:flutter_esp_ble_prov/flutter_esp_ble_prov.dart';

void main() {
  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'ESP BLE Provisioning',
      theme: ThemeData(
        useMaterial3: true,
        colorScheme: ColorScheme.fromSeed(
          seedColor: Colors.blue,
          brightness: Brightness.light,
        ),
        cardTheme: const CardThemeData(
          elevation: 2,
          margin: EdgeInsets.symmetric(vertical: 4, horizontal: 8),
        ),
        inputDecorationTheme: const InputDecorationTheme(
          border: OutlineInputBorder(),
          contentPadding: EdgeInsets.symmetric(horizontal: 16, vertical: 12),
        ),
      ),
      home: const ProvisioningHomePage(),
    );
  }
}

class ProvisioningHomePage extends StatefulWidget {
  const ProvisioningHomePage({super.key});

  @override
  State<ProvisioningHomePage> createState() => _ProvisioningHomePageState();
}

class _ProvisioningHomePageState extends State<ProvisioningHomePage> {
  final _flutterEspBleProvPlugin = FlutterEspBleProv();

  // State management
  bool _isScanningBle = false;
  bool _isScanningWifi = false;
  bool _isProvisioning = false;

  List<String> _devices = [];
  List<WifiNetwork> _networks = [];

  String _selectedDeviceName = '';
  String _selectedSsid = '';

  // Controllers
  final _prefixController = TextEditingController(text: 'PROV_');
  final _proofOfPossessionController = TextEditingController(text: 'abcd1234');
  final _passphraseController = TextEditingController();

  // Feedback
  String _statusMessage = '';
  Color _statusColor = Colors.grey;

  @override
  void dispose() {
    _prefixController.dispose();
    _proofOfPossessionController.dispose();
    _passphraseController.dispose();
    super.dispose();
  }

  void _showStatus(String message, Color color) {
    setState(() {
      _statusMessage = message;
      _statusColor = color;
    });

    // Auto clear status after 5 seconds
    Future.delayed(const Duration(seconds: 5), () {
      if (mounted) {
        setState(() {
          _statusMessage = '';
        });
      }
    });
  }

  Future<void> _scanBleDevices() async {
    if (_isScanningBle) return;

    setState(() {
      _isScanningBle = true;
      _devices.clear();
      _networks.clear();
      _selectedDeviceName = '';
      _selectedSsid = '';
    });

    try {
      final prefix = _prefixController.text.trim();
      if (prefix.isEmpty) {
        _showStatus('Please enter a device prefix', Colors.orange);
        return;
      }

      final scannedDevices = await _flutterEspBleProvPlugin.scanBleDevices(prefix);
      setState(() {
        _devices = scannedDevices;
      });

      if (scannedDevices.isEmpty) {
        _showStatus('No BLE devices found with prefix "$prefix"', Colors.orange);
      } else {
        _showStatus('Found ${scannedDevices.length} BLE device(s)', Colors.green);
      }
    } catch (e) {
      _showStatus('BLE scan failed: $e', Colors.red);
    } finally {
      setState(() {
        _isScanningBle = false;
      });
    }
  }

  Future<void> _scanWifiNetworks(String deviceName) async {
    if (_isScanningWifi) return;

    setState(() {
      _isScanningWifi = true;
      _networks.clear();
      _selectedSsid = '';
    });

    try {
      final proofOfPossession = _proofOfPossessionController.text.trim();
      if (proofOfPossession.isEmpty) {
        _showStatus('Please enter proof of possession', Colors.orange);
        return;
      }

      final scannedNetworks = await _flutterEspBleProvPlugin.scanWifiNetworksWithDetails(
          deviceName, proofOfPossession);

      setState(() {
        _networks = scannedNetworks;
        _selectedDeviceName = deviceName;
      });

      if (scannedNetworks.isEmpty) {
        _showStatus('No WiFi networks found', Colors.orange);
      } else {
        _showStatus('Found ${scannedNetworks.length} WiFi network(s)', Colors.green);
      }
    } catch (e) {
      _showStatus('WiFi scan failed: $e', Colors.red);
    } finally {
      setState(() {
        _isScanningWifi = false;
      });
    }
  }

  Future<void> _provisionWifi() async {
    if (_isProvisioning) return;

    setState(() {
      _isProvisioning = true;
    });

    try {
      final proofOfPossession = _proofOfPossessionController.text.trim();
      final passphrase = _passphraseController.text.trim();

      if (_selectedDeviceName.isEmpty || _selectedSsid.isEmpty) {
        _showStatus('Please select a device and WiFi network', Colors.orange);
        return;
      }

      if (passphrase.isEmpty) {
        _showStatus('Please enter WiFi passphrase', Colors.orange);
        return;
      }

      final result = await _flutterEspBleProvPlugin.provisionWifi(
          _selectedDeviceName, proofOfPossession, _selectedSsid, passphrase);

      if (result == true) {
        _showStatus('WiFi provisioning successful!', Colors.green);
        // Reset selections
        setState(() {
          _selectedDeviceName = '';
          _selectedSsid = '';
          _networks.clear();
        });
      } else {
        _showStatus('WiFi provisioning failed', Colors.red);
      }
    } catch (e) {
      _showStatus('Provisioning failed: $e', Colors.red);
    } finally {
      setState(() {
        _isProvisioning = false;
      });
    }
  }

  Widget _buildStatusBanner() {
    if (_statusMessage.isEmpty) return const SizedBox.shrink();

    return Container(
      width: double.infinity,
      padding: const EdgeInsets.all(12),
      color: _statusColor.withValues(alpha: 0.1),
      child: Row(
        children: [
          Icon(
            _statusColor == Colors.green
                ? Icons.check_circle
                : _statusColor == Colors.orange
                    ? Icons.warning
                    : Icons.error,
            color: _statusColor,
          ),
          const SizedBox(width: 8),
          Expanded(
            child: Text(
              _statusMessage,
              style: TextStyle(color: _statusColor, fontWeight: FontWeight.w500),
            ),
          ),
          IconButton(
            icon: const Icon(Icons.close, size: 20),
            onPressed: () => setState(() => _statusMessage = ''),
            padding: EdgeInsets.zero,
            constraints: const BoxConstraints(),
          ),
        ],
      ),
    );
  }

  Widget _buildBleScanSection() {
    return Card(
      child: Padding(
        padding: const EdgeInsets.all(16),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Row(
              children: [
                const Icon(Icons.bluetooth, color: Colors.blue),
                const SizedBox(width: 8),
                const Text(
                  'Step 1: Scan BLE Devices',
                  style: TextStyle(fontSize: 18, fontWeight: FontWeight.bold),
                ),
              ],
            ),
            const SizedBox(height: 16),
            TextField(
              controller: _prefixController,
              decoration: const InputDecoration(
                labelText: 'Device Prefix',
                hintText: 'e.g., PROV_',
                prefixIcon: Icon(Icons.search),
              ),
            ),
            const SizedBox(height: 12),
            SizedBox(
              width: double.infinity,
              child: ElevatedButton.icon(
                onPressed: _isScanningBle ? null : _scanBleDevices,
                icon: _isScanningBle
                    ? const SizedBox(
                        width: 20,
                        height: 20,
                        child: CircularProgressIndicator(strokeWidth: 2),
                      )
                    : const Icon(Icons.bluetooth_searching),
                label: Text(_isScanningBle ? 'Scanning...' : 'Scan BLE Devices'),
              ),
            ),
            if (_devices.isNotEmpty) ...[
              const SizedBox(height: 16),
              const Text(
                'Available Devices:',
                style: TextStyle(fontWeight: FontWeight.w500),
              ),
              const SizedBox(height: 8),
              ..._devices.map((device) => ListTile(
                    leading: const Icon(Icons.bluetooth_connected, color: Colors.blue),
                    title: Text(device, style: const TextStyle(fontWeight: FontWeight.w500)),
                    subtitle: Text(_selectedDeviceName == device ? 'Selected' : 'Tap to select'),
                    selected: _selectedDeviceName == device,
                    onTap: () => _scanWifiNetworks(device),
                    shape: RoundedRectangleBorder(
                      borderRadius: BorderRadius.circular(8),
                      side: BorderSide(
                        color: _selectedDeviceName == device ? Colors.blue : Colors.transparent,
                      ),
                    ),
                  )),
            ],
          ],
        ),
      ),
    );
  }

  Widget _buildWifiScanSection() {
    return Card(
      child: Padding(
        padding: const EdgeInsets.all(16),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Row(
              children: [
                const Icon(Icons.wifi, color: Colors.green),
                const SizedBox(width: 8),
                const Text(
                  'Step 2: Select WiFi Network',
                  style: TextStyle(fontSize: 18, fontWeight: FontWeight.bold),
                ),
              ],
            ),
            const SizedBox(height: 16),
            TextField(
              controller: _proofOfPossessionController,
              decoration: const InputDecoration(
                labelText: 'Proof of Possession',
                hintText: 'Security key for device',
                prefixIcon: Icon(Icons.security),
              ),
              obscureText: true,
            ),
            if (_networks.isNotEmpty) ...[
              const SizedBox(height: 16),
              const Text(
                'Available Networks:',
                style: TextStyle(fontWeight: FontWeight.w500),
              ),
              const SizedBox(height: 8),
              ..._networks.map((network) => ListTile(
                    leading: Icon(
                      Icons.wifi,
                      color: network.rssi > -50 ? Colors.green : network.rssi > -70 ? Colors.orange : Colors.red,
                    ),
                    title: Text(network.ssid, style: const TextStyle(fontWeight: FontWeight.w500)),
                    subtitle: Text('${network.rssi} dBm â€¢ ${network.rssi > -50 ? 'Strong' : network.rssi > -70 ? 'Good' : 'Weak'} signal'),
                    selected: _selectedSsid == network.ssid,
                    onTap: () => setState(() => _selectedSsid = network.ssid),
                    shape: RoundedRectangleBorder(
                      borderRadius: BorderRadius.circular(8),
                      side: BorderSide(
                        color: _selectedSsid == network.ssid ? Colors.green : Colors.transparent,
                      ),
                    ),
                  )),
            ] else if (_selectedDeviceName.isNotEmpty && !_isScanningWifi) ...[
              const SizedBox(height: 16),
              const Center(
                child: Text(
                  'No WiFi networks scanned yet.\nTap a BLE device above to scan.',
                  textAlign: TextAlign.center,
                  style: TextStyle(color: Colors.grey),
                ),
              ),
            ] else if (_isScanningWifi) ...[
              const SizedBox(height: 16),
              const Center(
                child: const Column(
                  children: [
                    CircularProgressIndicator(),
                    SizedBox(height: 8),
                    Text('Scanning WiFi networks...'),
                  ],
                ),
              ),
            ],
          ],
        ),
      ),
    );
  }

  Widget _buildProvisioningSection() {
    return Card(
      child: Padding(
        padding: const EdgeInsets.all(16),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Row(
              children: [
                const Icon(Icons.send, color: Colors.purple),
                const SizedBox(width: 8),
                const Text(
                  'Step 3: Provision Device',
                  style: TextStyle(fontSize: 18, fontWeight: FontWeight.bold),
                ),
              ],
            ),
            const SizedBox(height: 16),
            if (_selectedDeviceName.isNotEmpty && _selectedSsid.isNotEmpty) ...[
              Container(
                padding: const EdgeInsets.all(12),
                decoration: BoxDecoration(
                  color: Colors.blue.withValues(alpha: 0.1),
                  borderRadius: BorderRadius.circular(8),
                  border: Border.all(color: Colors.blue.withValues(alpha: 0.3)),
                ),
                child: Column(
                  crossAxisAlignment: CrossAxisAlignment.start,
                  children: [
                    Text('Device: $_selectedDeviceName'),
                    Text('Network: $_selectedSsid'),
                  ],
                ),
              ),
              const SizedBox(height: 16),
            ],
            TextField(
              controller: _passphraseController,
              decoration: const InputDecoration(
                labelText: 'WiFi Password',
                hintText: 'Enter network password',
                prefixIcon: Icon(Icons.lock),
              ),
              obscureText: true,
              enabled: _selectedDeviceName.isNotEmpty && _selectedSsid.isNotEmpty,
            ),
            const SizedBox(height: 16),
            SizedBox(
              width: double.infinity,
              child: ElevatedButton.icon(
                onPressed: (_selectedDeviceName.isEmpty || _selectedSsid.isEmpty || _isProvisioning)
                    ? null
                    : _provisionWifi,
                icon: _isProvisioning
                    ? const SizedBox(
                        width: 20,
                        height: 20,
                        child: CircularProgressIndicator(strokeWidth: 2),
                      )
                    : const Icon(Icons.send),
                label: Text(_isProvisioning ? 'Provisioning...' : 'Provision Device'),
                style: ElevatedButton.styleFrom(
                  backgroundColor: Colors.purple,
                  foregroundColor: Colors.white,
                  padding: const EdgeInsets.symmetric(vertical: 12),
                ),
              ),
            ),
          ],
        ),
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: const Text('ESP BLE Provisioning'),
        elevation: 2,
      ),
      body: Column(
        children: [
          _buildStatusBanner(),
          Expanded(
            child: SingleChildScrollView(
              padding: const EdgeInsets.all(16),
              child: Column(
                crossAxisAlignment: CrossAxisAlignment.start,
                children: [
                  const Text(
                    'Configure your ESP32 device',
                    style: TextStyle(
                      fontSize: 24,
                      fontWeight: FontWeight.bold,
                      color: Colors.black87,
                    ),
                  ),
                  const SizedBox(height: 8),
                  const Text(
                    'Follow the steps below to connect your ESP32 device to a WiFi network.',
                    style: TextStyle(
                      fontSize: 16,
                      color: Colors.black54,
                    ),
                  ),
                  const SizedBox(height: 24),
                  _buildBleScanSection(),
                  const SizedBox(height: 16),
                  _buildWifiScanSection(),
                  const SizedBox(height: 16),
                  _buildProvisioningSection(),
                ],
              ),
            ),
          ),
        ],
      ),
    );
  }
}
